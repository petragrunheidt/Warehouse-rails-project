<%= form_with model: warehouse do |w| %>
<% if @warehouse.errors.any? %>

  <div id="error_explanation">
    <h2>Todos campos devem ser preenchidos</h2>
    <div>
      <% @warehouse.errors.each do |error| %>
        <% flash.now[:alert] = error.full_message%>
        <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, class: name %>

        <% end %>
   </div>
<% end %>
  </div>
<% end %>


<dl>
<div>
<dt><%= w.label :name, 'Nome: '%>
<%= w.text_field :name %></dt>
</div><div>
<dt><%= w.label :code, 'Código (3 letras maisculas): '%>
<%= w.text_field :code, pattern: '[A-Z]{3}', maxlength: 3 %></dt>
</div><div>
<dt><%= w.label :city, 'Cidade: '%>
<%= w.text_field :city %></dt>
</div><div>
<dt><%= w.label :address, 'Endereço: '%>
<%= w.text_field :address %></dt>
</div><div>
<dt><%= w.label :cep, 'CEP (somente números): '%>
<%= w.text_field :cep, type: 'number', pattern: '[0-9]{5}-[0-9]{3}', maxlength: 8 %></dt>
</div><div>
<dt><%= w.label :area, 'Area: '%>
<%= w.number_field :area %></dt>
</div><div>
<dt><%= w.label :description, 'Descrição: '%>
<%= w.text_area :description, size: '60x12' %></dt>
</div><div>
<%= w.submit 'Enviar' %>
</div>
</dl>
<% end %>
