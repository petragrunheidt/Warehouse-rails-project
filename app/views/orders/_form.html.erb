<%= form_with model: order do |ord| %>
<% if @order.errors.any? %>

  <div id="error_explanation">
    <h2>Todos os campos devem ser preenchidos</h2>
    <div>
      <% @order.errors.each do |error| %>
        <% flash.now[:alert] = error.full_message%>
        <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, class: name %>

        <% end %>
   </div>
<% end %>
  </div>
<% end %>



<dl>
<div>
<dt><%= ord.label :name, 'Nome do Produto: '%>
<%= ord.text_field :name %></dt>
</div><div>
<%= ord.label :warehouse_id, 'GalpÃ£o: '%>
<%= ord.collection_select :warehouse_id, @warehouses, :id, :full_description, prompt:true %>
</div><div>
<%= ord.label :supplier_id, 'Fornecedor: '%>
<%= ord.collection_select :supplier_id, @suppliers, :id, :full_description, prompt:true %>
</div><div>
<%= ord.label :estimated_delivery_date, 'Data Prevista de Entrega: '%>
<%= ord.date_field :estimated_delivery_date %>
</div><div>
<%= ord.submit 'Enviar' %>
</div>
</dl>

<% end %>
