<%= form_with model: supplier do |s| %>
<% if @supplier.errors.any? %>

  <div id="error_explanation">
    <h2>Todos campos devem ser preenchidos</h2>
    <div>
      <% @supplier.errors.each do |error| %>
        <% flash.now[:notice] = error.full_message%>
        <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, class: name %>
        
        <% end %>
   </div>
<% end %>
  </div>
<% end %>


<dl>
<div>
<dt><%= s.label :corporate_name, 'Nome corporativo: '%>
